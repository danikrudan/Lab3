#include <stdio.h>

int main() {
    int n ;
    int arr[100];
    printf("Введите длину массива\n");
    printf("n = ");
    while (scanf("%d", &n) != 1 || getchar() != '\n'){
        printf("Ошибка!\n");
        rewind(stdin);
    }

    for(int i = 0; i < n ;i++) {
        printf("arr[%d] = ", i);
        while (scanf("%d", &arr[i]) != 1 || getchar() != '\n') {
            printf("Ошибка!\n");
            rewind(stdin);
        }
    }
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
        if (arr[i] < 0)
            printf("%d ", arr[i]);
    }
    return 0;
}

